<div class="flex items-center justify-center min-h-screen text-uho-dark_gray px-4 py-4">
  <div class="w-full max-w-md p-2 bg-uho-light_gray rounded-3xl ring-1 ring-uho-middle_gray md:px-10 md:py-4">
    <div class="flex items-center justify-center gap-2 mb-6 pt-2">
      <div class="w-10 h-10">
        <%= image_tag 'uho_for_phone.svg' %>
      </div>

      <h2 class="text-2xl font-bold text-center">新規登録</h2>

      <div class="w-10 h-10">
        <%= image_tag 'uho_for_phone.svg' %>
      </div>
    </div>
    <h2 class="text-2xl font-bold text-center text-uho-red">※ 只今準備中です</h2>

    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>

    <div class="flex items-center my-6">
      <div class="flex-grow border-t border-gray-300"></div>
      <span class="mx-4 text-gray-500 text-sm">または</span>
      <div class="flex-grow border-t border-gray-300"></div>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-control mb-4 p-2">
        <%= f.label :name, class: "label label-text mb-1" %>
        <%= f.text_field :name, class: "input input-bordered w-full h-10 rounded-xl px-4 py-2 ring-1 ring-uho-middle_gray" %>
      </div>

      <div class="form-control mb-4 p-2">
        <%= f.label :email, class: "label label-text mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full h-10 rounded-xl px-4 py-2 ring-1 ring-uho-middle_gray" %>
      </div>

      <div class="form-control mb-4 p-2">
        <%= f.label :password, class: "label label-text mb-1" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-500 mb-1">（<%= @minimum_password_length %>文字以上）</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full h-10 rounded-xl px-4 py-2 ring-1 ring-uho-middle_gray" %>
      </div>

      <div class="form-control mb-6 p-2">
        <%= f.label :password_confirmation, class: "label label-text mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full h-10 rounded-xl px-4 py-2 ring-1 ring-uho-middle_gray" %>
      </div>

      <div class="form-control flex justify-center">
        <%= f.submit "アカウント作成", class: "btn btn-sm bg-uho-blue p-2 md:p-3 2xl:p-4 rounded-xl text-gray-700" %>
      </div>
    <% end %>

  </div>
</div>
